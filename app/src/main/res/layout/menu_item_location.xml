<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                style="@style/MenuItemHolder">

    <ImageView
        android:id="@+id/image_left_icon"
        style="@style/MenuItemIcon"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="15dp"
        android:background="@drawable/ic_location"/>

    <TextView
        android:id="@+id/text_location_name"
        style="@style/MenuItemTextView"
        android:layout_toEndOf="@id/image_left_icon"
        android:layout_toStartOf="@+id/layout_temperature_delete"/>

    <LinearLayout
        android:id="@+id/layout_temperature_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/menu_item_location_name_right_margin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_temperature"
            style="@style/MenuItemTextView"/>

        <ImageView
            android:id="@+id/image_delete"
            style="@style/MenuItemIcon"
            android:background="@drawable/ic_delete_white"/>

    </LinearLayout>

</RelativeLayout>