<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                style="@style/MenuItemHolder">

    <ImageView
        android:id="@+id/image_left_icon"
        style="@style/MenuItemIcon"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="@dimen/menu_item_icon_right_margin"
        android:background="@drawable/ic_edit_locations"/>

    <TextView
        android:id="@+id/text_location_name"
        style="@style/MenuItemTextView"
        android:layout_toEndOf="@id/image_left_icon"
        android:text="@string/edit_locations"/>

</RelativeLayout>