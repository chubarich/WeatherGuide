<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:background="@drawable/background_suggest_item"
              android:paddingStart="@dimen/prediction_item_horizontal_padding"
              android:paddingEnd="@dimen/prediction_item_horizontal_padding"
              android:padding="@dimen/prediction_item_vertical_padding">

    <TextView
        android:id="@+id/text_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/primaryText"
        android:textSize="@dimen/prediction_item_primary_text_size"
        android:ellipsize="end"
        android:maxLines="1"/>

    <TextView
        android:id="@+id/text_secondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/prediction_item_secondary_text_size"
        android:textColor="@color/secondaryText"
        android:ellipsize="end"
        android:maxLines="2"/>

</LinearLayout>