<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
        <item name="android:textColorPrimary">@color/primaryText</item>
        <item name="android:textColorSecondary">@color/secondaryText</item>
        <item name="android:textColorHint">@color/hintText</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="android:color">@color/primaryText</item>
    </style>


    <!--   menu   -->

    <style name="MenuItemTextView" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/menu_item_text_size</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="MenuItemHolder">
        <item name="android:background">@drawable/background_menu_item</item>
        <item name="android:layout_marginBottom">@dimen/menu_item_holder_vertical_margin</item>
        <item name="android:layout_marginTop">@dimen/menu_item_holder_vertical_margin</item>
        <item name="android:paddingBottom">@dimen/menu_item_holder_vertical_padding</item>
        <item name="android:paddingEnd">@dimen/menu_item_holder_horizontal_padding</item>
        <item name="android:paddingStart">@dimen/menu_item_holder_horizontal_padding</item>
        <item name="android:paddingTop">@dimen/menu_item_holder_vertical_padding</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MenuItemIcon">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_width">@dimen/menu_item_icon_size</item>
        <item name="android:layout_height">@dimen/menu_item_icon_size</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- color of the menu overflow icon -->
        <item name="android:textColorSecondary">?android:textColorPrimary</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>
